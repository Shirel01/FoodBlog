<body>
    <div class="header">
        <div>
            <a href="index.html"><img src="images/logo.png" alt="Logo"></a>
        </div>
        <form action="index.html">
            <input type="text" value="Search from our 10,000+ Recipes around the world" id="search">
            <input type="submit" value="" id="searchbtn">
        </form>
    </div>

    <div class="body">
        <div>
            <div class="header">
            <ul>
            <li class="current">
                <a  asp-area="" asp-controller="Recipes" asp-action="Index">Home</a>
            </li>
            <li>
                <a asp-area="" asp-controller="Recipes" asp-action="recipes">A to Z Recipes</a>
            </li>
            <li>
                 <a asp-area="" asp-controller="Recipes" asp-action="featured">Featured Recipes</a>
            </li>
            <li>
                 <a asp-area="" asp-controller="Recipes" asp-action="videos">Videos</a>
            </li>
            <li>
                 <a asp-area="" asp-controller="Recipes" asp-action="about">About</a>
            </li>
            <li>
                 <a asp-area="" asp-controller="Recipes" asp-action="blog">Blog</a>
            </li>
            </ul>
            </div>
        </div>

    </div>


   
